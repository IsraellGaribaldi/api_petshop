{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,

    // ADICIONADO NO LUGAR CORRETO
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },

  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
